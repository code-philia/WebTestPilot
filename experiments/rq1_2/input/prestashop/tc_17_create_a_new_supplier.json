{
  "name": "17::Create A New Supplier",
  "url": "http://localhost:8083/",
  "setup_function": "logged_in_page",
  "actions": [
    {
      "action": "Click the 'Catalog' menu",
      "expectedResult": "The Catalog submenu expands."
    },
    {
      "action": "Click the 'Brands & Suppliers' submenu",
      "expectedResult": "The 'Brands & Suppliers' page is displayed."
    },
    {
      "action": "Click the 'Suppliers' tab",
      "expectedResult": "The page switches to the suppliers list."
    },
    {
      "action": "Click the 'Add new' button",
      "expectedResult": "A new page for creating a new supplier appears."
    },
    {
      "action": "Enter 'Shoes supplier' into the 'Name' field",
      "expectedResult": "The name of the supplier is entered successfully."
    },
    {
      "action": "Enter Phone '090-1234-5678'",
      "expectedResult": "The phone number is entered successfully."
    },
    {
      "action": "Enter Address 'Nishi-Shinjuku 1-25-1'",
      "expectedResult": "The address is entered successfully."
    },
    {
      "action": "Enter City 'Tokyo'",
      "expectedResult": "The city is entered successfully."
    },
    {
      "action": "Click the country dropdown",
      "expectedResult": "The country dropdown is opened."
    },
    {
      "action": "Select the Country 'Japan'",
      "expectedResult": "'Japan' is selected."
    },
    {
      "action": "Click the state dropdown",
      "expectedResult": "The state dropdown shows up."
    },
    {
      "action": "Select the state 'Aichi'",
      "expectedResult": "'Aichi' state is selected."
    },
    {
      "action": "Check the 'Enabled' radio button for 'Yes'",
      "expectedResult": "The supplier is set to be active."
    },
    {
      "action": "Click the 'Save' button",
      "expectedResult": "A 'Successful creation' message is displayed."
    }
  ]
}