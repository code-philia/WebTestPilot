{
  "name": "14::Meeting Add Minutes",
  "url": "http://localhost:8080/",
  "setup_function": "created_meeting_page",
  "actions": [
    {
      "action": "Click \"Switch to display view\" link",
      "expectedResult": "Display view is activated"
    },
    {
      "action": "Click the action menu button (three dots icon)",
      "expectedResult": "Action menu dropdown opens"
    },
    {
      "action": "Click \"Add minutes\" option",
      "expectedResult": "Minutes editor opens"
    },
    {
      "action": "Click in the Rich Text Area iframe",
      "expectedResult": "Rich text editor is focused"
    },
    {
      "action": "Type \"Meeting Minute\" in the editor",
      "expectedResult": "Text is entered in the editor"
    },
    {
      "action": "Click \"Save\" button",
      "expectedResult": "Minutes are saved"
    },
    {
      "action": "Verify minutes content is displayed in editor",
      "expectedResult": "Editor shows the saved minutes text"
    },
    {
      "action": "Verify \"Save\" button is disabled",
      "expectedResult": "Save button indicates no unsaved changes"
    },
    {
      "action": "Click \"Close\" button",
      "expectedResult": "Minutes editor is closed"
    }
  ]
}