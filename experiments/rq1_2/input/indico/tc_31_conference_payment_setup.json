{
  "name": "31::Conference Payment Setup",
  "url": "http://localhost:8080/",
  "setup_function": "created_conference_page",
  "actions": [
    {
      "action": "Click \"Registration\" link in navigation",
      "expectedResult": "Registration section opens"
    },
    {
      "action": "Verify \"Enable payments\" link is visible",
      "expectedResult": "Payment enablement option is available"
    },
    {
      "action": "Click \"Enable payments\" link",
      "expectedResult": "Payment confirmation dialog appears"
    },
    {
      "action": "Click \"OK\" button",
      "expectedResult": "Payments are enabled"
    },
    {
      "action": "Click \"Payments\" link in navigation",
      "expectedResult": "Payments configuration page opens"
    },
    {
      "action": "Verify payment status shows \"enabled\"",
      "expectedResult": "Payment module is active"
    },
    {
      "action": "Verify \"Bank Transfer disabled\" link is visible",
      "expectedResult": "Bank transfer option is available"
    },
    {
      "action": "Click \"Bank Transfer disabled\" link",
      "expectedResult": "Bank transfer configuration opens"
    },
    {
      "action": "Check the \"Enabled\" checkbox",
      "expectedResult": "Bank transfer is enabled"
    },
    {
      "action": "Click in the \"Payment details\" textbox",
      "expectedResult": "Payment details field is focused"
    },
    {
      "action": "Type \"Payment details\" in the field",
      "expectedResult": "Payment details are entered"
    },
    {
      "action": "Click \"Save\" button",
      "expectedResult": "Payment settings are saved"
    },
    {
      "action": "Verify alert message \"Settings for Bank Transfer saved\" appears",
      "expectedResult": "Success alert confirms settings saved"
    }
  ]
}