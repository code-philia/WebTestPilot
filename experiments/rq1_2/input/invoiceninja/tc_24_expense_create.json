{
  "name": "24::Expense Create",
  "url": "http://localhost:8082/",
  "setup_function": "setup_data_for_expense_create",
  "actions": [
    {
      "action": "Click \"Expenses\" link in navigation menu",
      "expectedResult": "Expenses listing page appears"
    },
    {
      "action": "Click \"Enter Expense\" button",
      "expectedResult": "Expense creation form opens"
    },
    {
      "action": "Click the Client field",
      "expectedResult": "The client field is focused"
    },
    {
      "action": "Fill \"company_name\" in the client field",
      "expectedResult": "Dropdown options show to choose client"
    },
    {
      "action": "Choose option \"company_name\"",
      "expectedResult": "Client \"company_name\" is chosen for the Client field"
    },
    {
      "action": "Click in the \"Amount\" textbox",
      "expectedResult": "Amount field is focused"
    },
    {
      "action": "Type \"2,3234\" in the amount field",
      "expectedResult": "Amount field contains value \"\"2,324\""
    },
    {
      "action": "Click the \"Currency\" field",
      "expectedResult": "The option dropdown to choose currency shows"
    },
    {
      "action": "Choose option \"Australian Dollar (AUD)\"",
      "expectedResult": "Australian Dollar (AUD) is chosen for currency"
    },
    {
      "action": "Click \"Save\" button",
      "expectedResult": "Expense is created and saved"
    },
    {
      "action": "Verify that the page now contains \"Edit Expense\"",
      "expectedResult": "The page has \"Edit Expense\" text meaning expense is created"
    }
  ]
}