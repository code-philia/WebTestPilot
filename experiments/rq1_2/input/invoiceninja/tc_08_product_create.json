{
  "name": "08::Product Create",
  "url": "http://localhost:8082/",
  "setup_function": "created_product_page",
  "actions": [
    {
      "action": "Click \"Products\" link in navigation menu",
      "expectedResult": "Products listing page appears"
    },
    {
      "action": "Click \"New Product\" button",
      "expectedResult": "Product creation form opens"
    },
    {
      "action": "Click in the \"Product\" name textbox",
      "expectedResult": "Product name field is focused"
    },
    {
      "action": "Type \"product_name123456\" in the name field",
      "expectedResult": "Product name field contains unique product name"
    },
    {
      "action": "Click in the \"Description\" textbox",
      "expectedResult": "Description field is focused"
    },
    {
      "action": "Type \"product_description123456\" in description field",
      "expectedResult": "Description field contains unique description"
    },
    {
      "action": "Click in the \"Price\" textbox",
      "expectedResult": "Price field is focused"
    },
    {
      "action": "Type \"123456\" in the price field",
      "expectedResult": "Price field contains unique price value"
    },
    {
      "action": "Click in the \"Default Quantity\" textbox",
      "expectedResult": "Default quantity field is focused"
    },
    {
      "action": "Type \"1\" in the default quantity field",
      "expectedResult": "Default quantity field contains value"
    },
    {
      "action": "Click in the \"Max Quantity\" textbox",
      "expectedResult": "Max quantity field is focused"
    },
    {
      "action": "Type \"10\" in the max quantity field",
      "expectedResult": "Max quantity field contains maximum value"
    },
    {
      "action": "Click \"Save\" button",
      "expectedResult": "Product is created and saved"
    },
    {
      "action": "Verify alert message \"Successfully created product\" appears",
      "expectedResult": "Success alert confirms product creation"
    },
    {
      "action": "Verify product appears in products listing",
      "expectedResult": "New product is visible in the products table"
    }
  ]
}