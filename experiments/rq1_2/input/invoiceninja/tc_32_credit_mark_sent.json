      "expectedResult": "Success alert confirms status change"
    },
    {
      "action": "Verify credit status changes to \"Sent\"",
      "expectedResult": "Credit status indicator shows \"\"Sent\"\""
    },
    {
      "action": "Navigate to credits listing",
      "expectedResult": "Credits listing page is displayed"
    },
    {
      "action": "Verify credit appears in sent credits filter",
      "expectedResult": "Credit is in sent status in listing"
    }
  ]
