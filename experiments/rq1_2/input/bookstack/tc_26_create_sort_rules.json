{
  "name": "26::Create Sort Rules",
  "url": "http://localhost:8081/",
  "setup_function": "logged_in_page",
  "actions": [
    {
      "action": "Click \"Settings\" link in navigation",
      "expectedResult": "Settings page is displayed"
    },
    {
      "action": "Click \"Sorting\" or equivalent option",
      "expectedResult": "Sort rules management section opens"
    },
    {
      "action": "Click \"Create Sort Rule\" button",
      "expectedResult": "Sort rule creation form opens"
    },
    {
      "action": "Click in the \"Name\" textbox",
      "expectedResult": "Name field is focused"
    },
    {
      "action": "Type \"Rule\" in the name field",
      "expectedResult": "Name field contains the name"
    },
    {
      "action": "Click button to add \"Name - Alphabetical (Asc)\" to the list",
      "expectedResult": "The option is added to the list"
    },
    {
      "action": "Click button to add \"Created Date (Asc)\"",
      "expectedResult": "The option is added to the list"
    },
    {
      "action": "Click \"Save\" button",
      "expectedResult": "Sort rule is created and saved"
    },
    {
      "action": "Verify rule \"Role\" appears in sort rules listing",
      "expectedResult": "New sort rule is listed in rules table"
    }
  ]
}