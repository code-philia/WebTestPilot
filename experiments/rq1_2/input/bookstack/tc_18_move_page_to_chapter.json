{
  "name": "18::Move Page Into Chapter",
  "url": "http://localhost:8081/",
  "setup_function": "created_page_move_page",
  "actions": [
    {
      "action": "Click \"Move\" button",
      "expectedResult": "Page move operation is initiated"
    },
    {
      "action": "Click the search text box",
      "expectedResult": "Search box is focused"
    },
    {
      "action": "Type \"Chapter\" in the search box",
      "expectedResult": "Search results are filtered by \"Chapter\""
    },
    {
      "action": "Select the chapter \"Chapter\" from the dropdown",
      "expectedResult": "Chapter is selected as destination"
    },
    {
      "action": "Click \"Move Page\" button",
      "expectedResult": "Page move operation is confirmed"
    },
    {
      "action": "Verify that \"Page\" is shown in the menu",
      "expectedResult": "\"Page\" is listed in the menu"
    },
    {
      "action": "Verify page breadcrumb to contain \"Book\"",
      "expectedResult": "\"Book\" link is present in the breadcrumb"
    },
    {
      "action": "Verify page breadcrumb to contain \"Chapter\"",
      "expectedResult": "\"Chapter\" link is present in the breadcrumb"
    },
    {
      "action": "Verify page breadcrumb to contain \"Page\"",
      "expectedResult": "\"Page\" link is present in the breadcrumb"
    },
    {
      "action": "Navigate back to the chapter through breadcrumb link",
      "expectedResult": "Original chapter page is displayed"
    },
    {
      "action": "Verify page name \"Page\" is shown in the main content of the page",
      "expectedResult": "\"Page\" is displayed in the main content"
    }
  ]
}