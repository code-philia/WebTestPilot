{
  "name": "04::Lecture Delete",
  "url": "http://localhost:8081/",
  "setup_function": "created_lecture_page",
  "actions": [
    {
      "action": "Navigate to the lecture to be deleted",
      "expectedResult": "Lecture detail page is displayed"
    },
    {
      "action": "Click the action menu button (three dots icon)",
      "expectedResult": "Action menu dropdown opens"
    },
    {
      "action": "Verify \"Delete\" option is visible",
      "expectedResult": "Delete option is available in menu"
    },
    {
      "action": "Click \"Delete\" option",
      "expectedResult": "Delete confirmation dialog appears"
    },
    {
      "action": "Check the \"I understand what this means\" checkbox",
      "expectedResult": "Confirmation checkbox is checked"
    },
    {
      "action": "Click \"Delete event\" button",
      "expectedResult": "Lecture deletion is confirmed"
    },
    {
      "action": "Verify alert message \"Event successfully deleted\" appears",
      "expectedResult": "Success alert confirms lecture deletion"
    }
  ]
}