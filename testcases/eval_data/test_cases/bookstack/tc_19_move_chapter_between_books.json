{
  "name": "TC-19-P :: Move Chapter Between Books",
  "url": "http://localhost:8081/",
  "setup_function": "logged_in_page",
  "actions": [
    {
      "action": "Navigate to a chapter within a book",
      "expectedResult": "Chapter detail page is displayed"
    },
    {
      "action": "Click \"Move\" link in the chapter actions",
      "expectedResult": "Move chapter dialog opens"
    },
    {
      "action": "Select destination book from dropdown",
      "expectedResult": "Book is selected as destination"
    },
    {
      "action": "Click \"Move Chapter\" button",
      "expectedResult": "Chapter move operation is initiated"
    },
    {
      "action": "Verify alert message \"Chapter successfully moved\" appears",
      "expectedResult": "Success alert confirms chapter move"
    },
    {
      "action": "Navigate to the destination book",
      "expectedResult": "Destination book page is displayed"
    },
    {
      "action": "Verify moved chapter appears in destination",
      "expectedResult": "Chapter is now listed in destination book"
    },
    {
      "action": "Navigate back to original book",
      "expectedResult": "Original book page is displayed"
    },
    {
      "action": "Verify chapter no longer appears in original location",
      "expectedResult": "Chapter is removed from original book"
    }
  ]
}