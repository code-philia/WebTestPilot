{
  "name": "TC-10-P :: Product Delete",
  "url": "http://localhost:8081/",
  "setup_function": "created_product_page",
  "actions": [
    {
      "action": "Navigate to the product to be deleted",
      "expectedResult": "Product detail page is displayed"
    },
    {
      "action": "Click \"More Actions\" or \"Actions\" dropdown",
      "expectedResult": "Actions menu opens"
    },
    {
      "action": "Click \"Delete\" option",
      "expectedResult": "Delete confirmation dialog appears"
    },
    {
      "action": "Click \"Yes\" or \"Confirm\" button in the confirmation dialog",
      "expectedResult": "Product deletion is confirmed"
    },
    {
      "action": "Verify alert message \"Successfully deleted product\" appears",
      "expectedResult": "Success alert confirms product deletion"
    },
    {
      "action": "Navigate to products listing",
      "expectedResult": "Products listing page is displayed"
    },
    {
      "action": "Verify deleted product no longer appears in active list",
      "expectedResult": "Product is removed from main listing"
    }
  ]
}